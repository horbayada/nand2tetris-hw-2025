// Xor gate:
// a XOR b: out = (a AND (NOT b)) OR ((NOT a) AND b)
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Not(a=b, out=not_b);
    Not(a=a, out=not_a);
    And(a=a, b=not_b, out=and1);
    And(a=not_a, b=b, out=and2);
    Or(a=and1, b=and2, out=out);
}
